---
import Head from "../components/Head.astro"
import Footer from "../components/Footer.astro"
import Appbar from "../components/Appbar.astro"

const {title = '', action} = Astro.props
---
<!DOCTYPE html>
<html lang="ua">
<head>
    <Head title={title} action={action}/>
    <title>{title}</title>
</head>
<body class="cloak">
<Appbar/>
<slot/>
<Footer/>
</body>
</html>
